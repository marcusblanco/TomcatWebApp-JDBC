<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- add servlet -->
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>app.servlets.AddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/lab5java_war_exploded/add</url-pattern>
    </servlet-mapping>
    <!-- table servlet -->
    <servlet>
        <servlet-name>table</servlet-name>
        <servlet-class>app.servlets.TableServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>table</servlet-name>
        <url-pattern>/lab5java_war_exploded/table</url-pattern>
    </servlet-mapping>

    <!-- delete servlet -->
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>app.servlets.DeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/lab5java_war_exploded/delete</url-pattern>
    </servlet-mapping>
</web-app>
